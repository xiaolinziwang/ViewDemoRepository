<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_decode"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.chunlin.viewdemo.Twelve.DecodeActivity">
   <ImageView
       android:id="@+id/iv"
       android:layout_centerVertical="true"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />

   <TextView
       android:id="@+id/tv_down"
       android:background="@color/colorPrimary"
       android:layout_width="match_parent"
       android:padding="20dp"
       android:text="DiskLruCache"
       android:layout_height="wrap_content" />
   <TextView
       android:id="@+id/tv_read"
       android:background="@color/colorAccent"
       android:layout_width="match_parent"
       android:padding="20dp"
       android:text="ReadImgFromDiskLruCache"
       android:layout_height="wrap_content" />
   <ImageView
       android:id="@+id/iv_read"
       android:layout_centerVertical="true"
       android:scaleType="centerCrop"
       android:src="@mipmap/ic_launcher"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />
   <TextView
       android:id="@+id/tv_remove"
       android:background="@color/colorAccent"
       android:layout_width="match_parent"
       android:padding="20dp"
       android:text="removeImgFromDiskLruCache"
       android:layout_height="wrap_content" />
   <TextView
       android:id="@+id/tv_disLruche"
       android:padding="10dp"
       android:text="缓存大小"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />
   <TextView
       android:id="@+id/tv_delete"
       android:background="@color/colorAccent"
       android:layout_width="match_parent"
       android:padding="20dp"
       android:text="delete"
       android:layout_height="wrap_content" />
</LinearLayout>
